{
  "buildCommand": "pnpm run build",
  "devCommand": "pnpm run dev",
  "installCommand": "pnpm install",
  "framework": "nextjs",
  "regions": [
    "iad1"
  ],
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30,
      "memory": 1024
    },
    "src/app/api/upload/route.ts": {
      "maxDuration": 60,
      "memory": 1024
    }
  },
  "limits": {
    "maxRequestBodySize": "50mb"
  },
  "env": {
    "NODE_ENV": "production"
  }
}