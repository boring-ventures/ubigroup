generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  
}

enum UserRole {
  SUPER_ADMIN
  AGENCY_ADMIN
  AGENT
}

enum PropertyType {
  HOUSE
  APARTMENT
  OFFICE
  LAND
}

enum TransactionType {
  SALE
  RENT
  ANTICRÃ‰TICO
}

enum PropertyStatus {
  PENDING
  APPROVED
  REJECTED
}

enum QuadrantStatus {
  AVAILABLE
  UNAVAILABLE
  RESERVED
}

enum Currency {
  BOLIVIANOS
  DOLLARS
}

enum LandingImageStatus {
  ACTIVE
  INACTIVE
}

model User {
  id        String   @id @default(cuid())
  userId    String   @unique
  avatarUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  active    Boolean  @default(true)
  firstName String?  @map("first_name")
  lastName  String?  @map("last_name")
  role      UserRole @default(AGENT)
  phone     String?
  requiresPasswordChange Boolean @default(false) @map("requires_password_change")

  // Agency relationship - Super Admins don't belong to agencies
  agency   Agency? @relation(fields: [agencyId], references: [id])
  agencyId String?

  // Only agents create properties
  properties Property[]
  
  // Only agents create projects
  projects Project[]
  
  // Super admins can create landing images
  landingImages LandingImage[]

  @@index([userId])
  @@index([role])
  @@index([agencyId])
  @@map("users")
}

model Agency {
  id        String   @id @default(cuid())
  name      String   @unique
  logoUrl   String?
  address   String?
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  active    Boolean  @default(true)

  // Agency has many users (Agency Admins and Agents)
  users      User[]
  properties Property[]
  projects   Project[]

  @@map("agencies")
}

model Property {
  id              String          @id @default(cuid())
  customId        String?         @unique @map("custom_id") // Auto-generated ID like ANT001, VEN001, etc.
  title           String
  description     String
  type            PropertyType
  locationState   String          @map("location_state")
  locationCity    String          @map("location_city")
  locationNeigh   String          @map("location_neighborhood")
  municipality    String?         // New field for municipality
  address         String?         // Full address
  googleMapsUrl   String?         @map("google_maps_url") // Google Maps URL
  latitude        Float?          // Latitude for map pin
  longitude       Float?          // Longitude for map pin
  price           Float
  currency        Currency        @default(BOLIVIANOS)
  exchangeRate    Float?          @map("exchange_rate") // Exchange rate when currency is DOLLARS
  bedrooms        Int
  bathrooms       Int
  garageSpaces    Int             @map("garage_spaces")
  squareMeters    Float           @map("square_meters")
  transactionType TransactionType @map("transaction_type")
  status          PropertyStatus  @default(PENDING)
  images          String[]        // Array of image URLs
  videos          String[]        // Array of video URLs
  features        String[]        // Additional features like "Pool", "Garden", etc.
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  // Property is created by an agent
  agent    User   @relation(fields: [agentId], references: [id], onDelete: Cascade)
  agentId  String @map("agent_id")

  // Property belongs to an agency
  agency   Agency @relation(fields: [agencyId], references: [id])
  agencyId String @map("agency_id")

  @@index([status])
  @@index([type])
  @@index([transactionType])
  @@index([locationState, locationCity])
  @@index([agentId])
  @@index([agencyId])
  @@index([customId])
  @@map("properties")
}

model Project {
  id          String   @id @default(cuid())
  name        String
  description String
  location    String
  propertyType PropertyType
  images      String[] // Array of image URLs
  googleMapsUrl String?  @map("google_maps_url")
  latitude    Float?
  longitude   Float?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  active      Boolean  @default(true)

  // Project is created by an agent
  agent    User   @relation(fields: [agentId], references: [id], onDelete: Cascade)
  agentId  String @map("agent_id")

  // Project belongs to an agency
  agency   Agency @relation(fields: [agencyId], references: [id])
  agencyId String @map("agency_id")

  // Project has many floors
  floors Floor[]

  @@index([agentId])
  @@index([agencyId])
  @@map("projects")
}

model Floor {
  id        String   @id @default(cuid())
  number    Int
  name      String?  // Optional floor name like "Ground Floor", "First Floor"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Floor belongs to a project
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String  @map("project_id")

  // Floor has many quadrants
  quadrants Quadrant[]

  @@index([projectId])
  @@map("floors")
}

model Quadrant {
  id          String         @id @default(cuid())
  customId    String         @map("custom_id") // Auto-generated ID like Q001, Q002, etc.
  area        Float
  bedrooms    Int
  bathrooms   Int
  price       Float
  currency    Currency       @default(BOLIVIANOS)
  exchangeRate Float?        @map("exchange_rate")
  status      QuadrantStatus @default(AVAILABLE)
  active      Boolean        @default(true)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  // Quadrant belongs to a floor
  floor   Floor @relation(fields: [floorId], references: [id], onDelete: Cascade)
  floorId String @map("floor_id")

  @@index([floorId])
  @@index([status])
  @@index([customId])
  // Ensure customId uniqueness per floor (not globally)
  @@unique([floorId, customId])
  @@map("quadrants")
}

model LandingImage {
  id          String             @id @default(cuid())
  title       String?            // Optional title for the image
  description String?            // Optional description
  imageUrl    String             @map("image_url")
  status      LandingImageStatus @default(INACTIVE)
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  active      Boolean            @default(true)

  // Landing image is created by a super admin
  createdBy   User   @relation(fields: [createdById], references: [id], onDelete: Cascade)
  createdById String @map("created_by_id")

  @@index([status])
  @@index([createdById])
  @@map("landing_images")
}
